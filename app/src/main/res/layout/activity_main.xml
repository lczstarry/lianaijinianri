<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clickable="true"
    android:id="@+id/o"
    android:background="@drawable/jbshape">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="已经相爱"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_gravity="left"
        android:layout_below="@+id/meditText4"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="天了"
        android:id="@+id/textView8"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/mbutton1"
        android:layout_alignEnd="@+id/mbutton1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:textSize="70sp"
        android:textColor="#ffffff"
        android:text="000"
        android:layout_alignTop="@+id/textView7"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="计算天数"
    android:id="@+id/button1"
    android:textSize="20sp"
        android:drawableTop="@drawable/ic_access_time_white_48dp"
        android:background="@drawable/yjshape"

    android:textStyle="bold"
    android:textColor="#ffffff"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/mbutton2"
        android:layout_alignStart="@+id/mbutton2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="计算日期"
        android:id="@+id/mbutton1"
        android:textSize="20sp"
        android:background="@drawable/yjshape"

        android:textStyle="bold"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/ic_event_white_48dp"
        android:layout_alignTop="@+id/button1"
        android:layout_alignLeft="@+id/mbutton3"
        android:layout_alignStart="@+id/mbutton3" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="纪念日"
        android:id="@+id/mbutton2"
        android:textSize="20sp"
        android:background="@drawable/yjshape"
        android:onClick="log3"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/ic_favorite_white_48dp"
        android:layout_below="@+id/textView10"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="退出"
        android:id="@+id/mbutton3"
        android:textSize="20sp"
        android:background="@drawable/yjshape"

        android:textStyle="bold"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/ic_exit_to_app_white_48dp"
        android:layout_alignTop="@+id/mbutton2"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="    "
        android:textColor="#1fdf3c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#1fdf3c"
        android:textSize="15sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/meditText4"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:layout_below="@+id/mtextView2"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(格式：xxxx-xx-xx)"
        android:id="@+id/mtextView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/editText4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imagebutton3"
        android:background="@drawable/yjshape2"
       android:src="@mipmap/ic_save_white_48dp"
        android:onClick="savein"

        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imagebutton4"
        android:background="@drawable/yjshape2"
       android:src="@mipmap/ic_delete_white_48dp"
        android:onClick="saveout"

        android:layout_alignTop="@+id/imagebutton3"
        android:layout_alignLeft="@+id/meditText4"
        android:layout_alignStart="@+id/meditText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="从"
        android:id="@+id/textView12"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/meditText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="至今"
        android:id="@+id/textView15"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/mtextView2"
        android:layout_toRightOf="@+id/meditText4"
        android:layout_toEndOf="@+id/meditText4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@mipmap/ic_chevron_right_white_36dp"
        android:layout_alignTop="@+id/meditText4"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

</RelativeLayout>
