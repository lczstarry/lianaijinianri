<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/jbshape">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="在一起的第"
        android:id="@+id/textView13"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_chevron_right_white_36dp"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="天纪念日是"
        android:id="@+id/textView14"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText3"
        android:layout_toRightOf="@+id/ymtextView2"
        android:layout_toEndOf="@+id/ymtextView2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="       年  月  日"
        android:id="@+id/textView5"
        android:textSize="40sp"

        android:textColor="#ffffff"
        android:layout_below="@+id/textView14"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:layout_marginTop="27dp"

        android:layout_toEndOf="@+id/ytextView12"
        android:layout_toRightOf="@+id/ytextView12" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button"
        android:onClick="log"
       android:src="@mipmap/ic_search_white_48dp"
        android:background="@drawable/yjshape2"


        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(格式：xxxx-xx-xx)"
        android:id="@+id/ymtextView2"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="从"
        android:id="@+id/ytextView12"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/yimagebutton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yimageView3"
        android:src="@mipmap/ic_chevron_right_white_36dp"
        android:layout_alignBottom="@+id/ymeditText4"
        android:layout_toRightOf="@+id/ytextView12"
        android:layout_toEndOf="@+id/ytextView12" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/ymeditText4"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:layout_below="@+id/ymtextView2"
        android:layout_toRightOf="@+id/yimageView3"
        android:layout_toEndOf="@+id/yimageView3" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/yimagebutton3"
        android:background="@drawable/yjshape2"
        android:src="@mipmap/ic_save_white_48dp"
        android:onClick="savein"

        android:layout_below="@+id/yimageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/yimagebutton4"
        android:background="@drawable/yjshape2"
        android:src="@mipmap/ic_delete_white_48dp"
        android:onClick="saveout"

        android:layout_below="@+id/yimageView3"
        android:layout_toRightOf="@+id/yimageView3"
        android:layout_toEndOf="@+id/yimageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="开始"
        android:id="@+id/textView16"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:layout_below="@+id/yimagebutton4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imagebutton5"

        android:src="@mipmap/ic_arrow_back_white_48dp"
        android:background="@drawable/yjshape2"

        android:layout_gravity="right|bottom"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />


</RelativeLayout>
